            computed: {
                filteredTodos() {
                    const filter = this.$store.filter;
                    const todos = this.$store.todos;
                    
                    if (filter === 'active') {
                        return todos.filter(t => !t.done);
                    }
                    if (filter === 'completed') {
                        return todos.filter(t => t.done);
                    }
                    return todos;
                }
            }
        },
        
        'todo-item': {
            template: `
                &lt;li :class="{ done: done }"&gt;
