                        &lt;/button&gt;
                        &lt;button @click="setFilter('active')" 
                                :class="{ active: $store.filter === 'active' }"&gt;
                            Actifs ({{ activeCount }})
                        &lt;/button&gt;
                        &lt;button @click="setFilter('completed')" 
                                :class="{ active: $store.filter === 'completed' }"&gt;
                            Termin√©s ({{ completedCount }})
                        &lt;/button&gt;
                    &lt;/div&gt;
                    
                    &lt;todo-list&gt;&lt;/todo-list&gt;
                &lt;/div&gt;
            `,
            computed: {
                totalCount() {
                    return this.$store.todos.length;
                },
                activeCount() {
                    return this.$store.todos.filter(t => !t.done).length;
                },
                completedCount() {
                    return this.$store.todos.filter(t => t.done).length;
                }
            },
            methods: {
                setFilter(filter) {
                    this.$store.filter = filter;
                }
            }
        },
        
        'todo-input': {
            template: `
                &lt;div class="todo-input"&gt;
                    &lt;input type="text" 
                           v-model="newTodo" 
                           @keyup.enter="addTodo"
                           placeholder="Nouvelle t√¢che..."&gt;
                    &lt;button @click="addTodo"&gt;Ajouter&lt;/button&gt;
                &lt;/div&gt;
            `,
            data() {
                return {
                    newTodo: ''
                }
            },
            methods: {
                addTodo() {
                    if (this.newTodo.trim()) {
                        const todo = {
                            id: Date.now(),
                            text: this.newTodo,
                            done: false
                        };
